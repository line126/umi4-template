# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
# trim_trailing_whitespace = false
# insert_final_newline = false

[*.{js,jsx,ts,tsx}]
max_line_length = 160
quote_type = single

[*.{jsx,tsx}]
indent_size = 2
